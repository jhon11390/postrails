<!DOCTYPE html>
<html>
  <head>
    <title>SuperBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to 'SuperBlog', posts_path, class: "navbar-brand text-muted" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse"   data-target="#navbarNavDropdown"    aria-controls="navbarNavDropdown" aria-expanded="false"   aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if signed_in? %>
              <li class="nav-item">
                <%= link_to 'Nuevo Post', new_post_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Salir', destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %> 
              <li class="nav-item">
                <%= link_to 'Ingresar', new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Registrarse', new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

     <% if flash[:notice] %>
      <div class="alert alert-info"><%= flash[:notice] %></div>
    <% end %>
    
    <% if signed_in? %>
      <div class="container">
        <div class="row justify-content-center text-muted text-center">
          <div class="col-8">
            Has iniciado sesion con <%= current_user.email %>
          </div>
        </div>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
