<div class="container">
  <div class="row">
    <div class="col">
      <% @posts.each do |post|%>
        <div class="card mt-4">
          <h5 class="card-header display-4"><%= link_to post.title, post_path(post.id) %></h5>
          <div class="card-body">
          <p class="card-text text-muted"><%= post.created_at %></p>
            <p class="card-text"><%= truncate(post.body, :length => 250) %></p>
            <% if signed_in? %>
              <%= link_to 'Editar', edit_post_path(post.id), class: "btn btn-primary" %>
              <%= link_to 'Eliminar', post, method: :delete, class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>