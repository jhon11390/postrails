<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-4">
      <h2>Registrarse</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="form-group">
          <%= f.label :email, class: "font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
        </div>
      
        <div class="form-group">
          <%= f.label :ContraseÃ±a, class: "font-weight-bold" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control input-lg" %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation, class: "font-weight-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control input-lg" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Registrarse", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>





