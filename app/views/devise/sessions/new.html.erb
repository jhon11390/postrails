<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-4">

      <h2>Iniciar Sesion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :ContraseÃ±a, class: "font-weight-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control input-lg" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label font-weight-bold" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Iniciar Sesion", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
